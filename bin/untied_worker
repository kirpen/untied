#!/usr/bin/env ruby

require "amqp"

require "untied"
require "untied/worker"

module Untied
  AMQP.start do |connection|
    channel  = AMQP::Channel.new(connection)
    exchange = channel.topic("untied", :auto_delete => true)
    # consumer = Consumer.new
    worker = Worker.new(:channel => channel, :exchange => exchange)
    worker.start
  end
end
